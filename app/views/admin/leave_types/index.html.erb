<%- model_class = LeaveType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:paid) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @leave_types.each do |leavetype| %>
      <tr>
        <td><%= leavetype.title %></td>
        <td><%= leavetype.paid %></td>
        <td>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_leave_type_path(leavetype), :class => 'btn btn-warning' %>
       <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_leave_types_path(leavetype),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_leave_type_path,
            :class => 'btn btn-primary' %>
