<%- model_class = Staff -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:staff_no) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:middle_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <% if staff.staff_no? %>
          <td><%= staff.staff_no %></td>
        <% else %>
          <td>none set</td>
        <% end %>
        <td><%= staff.first_name %></td>
        <td><%= staff.middle_name %></td>
        <td><%= staff.last_name %></td>
        <td>
			<%= link_to t('.show', :default => t("helpers.links.show")), staff_path(staff), :class =>
			'btn btn-info' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_staff_path(staff), :class => 'btn btn-warning' %>
          <!-- <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      staff_path(staff),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %> -->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_staff_path,
            :class => 'btn btn-primary' %>
