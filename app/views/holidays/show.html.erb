<%- model_class = Holiday -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:staff_id) %>:</strong></dt>
  <dd><%= full_name(@holiday.staff_id) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
  <dd><%= @holiday.start_date.strftime("%d/%m/%Y") %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_date) %>:</strong></dt>
  <dd><%= @holiday.end_date.strftime("%d/%m/%Y") %></dd>
  <dt><strong><%= model_class.human_attribute_name(:leave_type_id) %>:</strong></dt>
  <dd><%= leave_type_name(@holiday.leave_type_id) %></dd>
  <dt><strong>Length</strong></dt>
  <dd><%= business_days_between(@holiday.start_date, @holiday.end_date) %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              holidays_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_holiday_path(@holiday), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              holiday_path(@holiday),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
