<%- model_class = HolidayEntitlement -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:staff_id) %></th>
      <th><%= model_class.human_attribute_name(:holiday_year_start) %></th>
      <th><%= model_class.human_attribute_name(:holiday_year_end) %></th>
      <th><%= model_class.human_attribute_name(:holiday_days) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @holiday_entitlements.each do |holiday_entitlement| %>
      <tr>
        <td><%= Staff.find(holiday_entitlement.staff_id).full_name %></td>
        <td><%= holiday_entitlement.holiday_year_start.strftime("%d/%m/%Y") %></td>
        <td><%= holiday_entitlement.holiday_year_end.strftime("%d/%m/%Y") %></td>
        <td><%= holiday_entitlement.holiday_days %></td>
        <td>
      <%= link_to t('.show', :default => t("helpers.links.show")),
          holiday_entitlements_path(holiday_entitlement), :class => 'btn btn-info' %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_holiday_entitlement_path(holiday_entitlement), :class => 'btn btn-warning' %>
          <!-- <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      holiday_entitlement_path(holiday_entitlement),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %> -->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_holiday_entitlement_path,
            :class => 'btn btn-primary' %>
